# Server Configuration
NODE_ENV=development
PORT=5000

# Database (Using MongoDB Atlas - replace with your connection string)
# Sign up free at: https://www.mongodb.com/atlas
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/import_export_db
MONGO_URI=mongodb://localhost:27017/import_export_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# Cookie Configuration
COOKIE_EXPIRE=7

# Email Configuration (for mails folder)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@nexarion.com
FROM_NAME=Nexarion Global Exports

# Frontend URL
CLIENT_URL=http://localhost:5173

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Payment Gateway
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Shipping API Keys (Optional)
DHL_API_KEY=your_dhl_api_key
FEDEX_API_KEY=your_fedex_api_key
UPS_API_KEY=your_ups_api_key
